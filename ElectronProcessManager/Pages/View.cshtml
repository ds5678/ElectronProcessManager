@page
@model ViewModel
@{
    ViewData["Title"] = Model.Name;
}
<div>
    <dl class="row">
        @foreach (var property in @Model.Properties)
        {
            <dt class="col-sm-4">
                @property.Key
            </dt>
            <dd class="col-sm-8">
                @property.Value
            </dd>
        }
        <dt class="col-sm-4">
            Modules
        </dt>
        <dd class="col-sm-8">
            <a asp-page="./Modules" asp-route-id="@Model.Id">Show</a>
        </dd>
    </dl>
</div>
<div>
    <hr />
    <form method="post">
        <input type="submit" value="Kill Process" class="btn btn-danger" />
        <a class="btn btn-light" asp-page="./Index">Back to List</a>
    </form>
</div>
